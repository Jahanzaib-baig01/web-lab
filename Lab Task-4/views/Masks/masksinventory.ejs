

<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Details</th>
      <th>Update</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% for (let index = 0; index < masks.length; index++) { %>
      <tr>
        <td><%= masks[index].name %></td>
        <td>PKR <%= masks[index].Price %></td>
        <td><%= masks[index].details %></td>
        <td>
          <div class="col-md-4">
            <a href="/getmaskid?id=<%= masks[index].id %>"><button class="btn btn-success">Update</button></a>
          </div>
        </td>
        <td>
          <div class="col-md-4">
            <form id="deleteForm" method="POST" action="/masksinventory">
              <input type="hidden" name="_method" value="DELETE">
              <input type="hidden" name="id" value="<%= masks[index].id %>">
              <button class="btn btn-danger" type="submit">Delete</button>
            </form>
          </div> 
        </td>
      </tr>
    <% } %>
  </tbody>
</table>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <a href="/addmasks" class="btn btn-primary">Add Masks</a>
    </div>
  </div>
</div>
